<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body data-bs-theme="dark">
        <nav class="navbar navbar-expand-lg bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Pixel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('app_app_home') }}">Home</a>
                                                       
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('app_game_index') }}">Jeux</a>
                                                       
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('app_category_index') }}">Categorie</a>
                                                       
                        </li>
                    {# ul.navbar-nav.ms-auto.mb-2.mb-lg-0 #}
                    </ul>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    {% if is_granted('ROLE_USER') %}
                    <li class="nav-item">
                     <a class ="nav-link" aria-current="page" href="#">{{ app.user.username }}</a>
                     </li>
                    {% else %}
                    <li class="nav-item">
                    <a class ="nav-link" aria-current="page" href="{{ path('app_register') }}">S'inscrire</a>
                    </li>
                    <li class = "nav-item">
                    <a class ="nav-link" aria-current="page" href="{{ path('app_login') }}">Se connecter</a>
                    </li>
                    {% endif %}
                    </ul>
                    
                    
                </div>
            </div>
        </nav>
        {% block body %}{% endblock %}
    </body>
</html>
