{% extends 'base.html.twig' %}

{% block title %}Support{% endblock %}

{% block body %}
    <h1>Support</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ support.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ support.name }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ support.published ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Constructor</th>
                <td>{{ support.constructor }}</td>
            </tr>
            <tr>
                <th>ReleaseDate</th>
                <td>{{ support.releaseDate ? support.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ support.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_support_index') }}">back to list</a>

    <a href="{{ path('app_support_edit', {'id': support.id}) }}">edit</a>

    {{ include('support/_delete_form.html.twig') }}
{% endblock %}
