{% extends 'base.html.twig' %}

{% block title %}Support index{% endblock %}

{% block body %}
    <h1>Support index</h1>

    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Published</th>
                <th>Constructor</th>
                <th>ReleaseDate</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for support in supports %}
            <tr>
                <td>
                {% if (support.mainImage) %}
                <img src="{{ support.mainImage }}" width="120" />
                {% endif %}
                </td>
                <td>{{ support.name }}</td>
                <td>{{ support.published ? 'Yes' : 'No' }}</td>
                <td>{{ support.constructor }}</td>
                <td>{{ support.releaseDate ? support.releaseDate|date('Y-m-d') : '' }}</td>
                <td>{{ support.description }}</td>
                <td>
                    <a href="{{ path('app_support_show', {'id': support.id}) }}">show</a>
                    <a href="{{ path('app_support_edit', {'id': support.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_support_new') }}">Create new</a>
{% endblock %}
